@model List<TableViewModel>
    
<style>
    body {
        background-image: url('/image/cafebackground.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size:cover;
        
    }

    #isAvaible-True {
        background-color: rgba(0, 0, 0, 0.50);
    }
    #isAvaible-True:hover{
        background-color:rgba(2, 147, 0, 0.85)
    }

        #isAvaible-True button {
            cursor: pointer;
            color: #ffffff;
            background-color: rgba(255, 255, 255, 0);
        }

    #isAvaible-False {
        background-color: rgba(0, 0, 0, 0.50);
        color: currentColor;
        cursor: not-allowed;
        text-decoration: none;
    }
        #isAvaible-False:hover {
            background-color: rgba(226, 0, 0, 0.85);
        }

        #isAvaible-False button {
            cursor: not-allowed;
            margin-left: auto;
            margin-right: auto;
            color:#ffffff;
            background-color:rgba(255, 255, 255, 0);
        }

    #grid {
        
        display: grid;
        grid-template-columns: auto auto auto;
        padding: 10px;
        background-color:rgba(56, 56, 56, 0.55);
        border-radius:25px 25px 25px 25px;    
    }

    .card {
        padding: 5px;
        margin: 20px;
        box-shadow: 0 5px 10px 0 rgba(255, 255, 255, 0.1);
        transition: 0.3s;
        border-color: aliceblue;
    }

        .card:hover {
            box-shadow: 0 10px 20px 0 rgba(255, 255, 255, 0.2);
        }

    .card, .card-header, .card-body {
        @*background-color: rgba(255, 0, 0, 0.20);*@
        color: #ffffff;
    }
       

    .cardText {
        text-align: center;
    }
</style>

<div class="container" id="grid">

    @foreach (var item in Model)
    {
    <div class="card" id="isAvaible-@item.IsAvailable">
        <div class="card-header">
            <h5 class="cardText">
                @item.TableName
            </h5>
        </div>

        <div class="card-body">
            @if (item.IsAvailable)
            {<p class="cardText">Müsait</p> }
            else
            {<p class=" cardText">Dolu</p>}
        </div>
        @if (item.IsAvailable)
        {
            <div class="card-footer" id="@item.TableId*@item.TableName"><div style="text-align:center"><button class="btn btn-light sendButton"> Oturma İsteği Yolla</button></div></div>
        }
        else
        {
            <div class="card-footer" id="@item.TableId*@item.TableName"><div style="text-align:center"><button class="btn btn-light"> Oturma İsteği Yolla</button></div></div>
        }

    </div>
    }
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/Istek.js"></script>

