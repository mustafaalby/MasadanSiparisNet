<style>
    body {
        background-image: url('/image/cafebackground.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }

    .field-validation-error {
        margin-bottom: 5px;
        padding: 3px;
        background-color: #b90000;
        color: aliceblue;
        border-radius: 5px;
    }
    .form {
        background-color: rgba(0, 0, 0, 0.8);
        border-radius: 25px 25px 20px 25px;
        padding: 10px 10px 10px 0px;
    }

    .form p {
        color: rgb(255, 255, 255);
    }
    .form input {
        background-color: rgba(0, 0, 0, 0.50);
        border-color: rgb(255, 255, 255);
    }

    .form input[type=text] {
        background-color: rgba(0, 0, 0, 0.50);
        border-color: rgb(255, 255, 255);
        color: rgb(255, 255, 255);
    }

    .form input[type=text]:focus {
        background-color: rgba(0, 0, 0, 0.50);
        box-shadow: 3px 7px rgba(255, 255, 255, 0.2);
        transition: 0.3s;
        color: aliceblue;
    }
        .form input[type=submit]:hover {
            background-color: rgba(2, 147, 0, 0.85);
            border-color: rgb(255, 255, 255);
        }
</style>
@using (@Html.BeginForm(FormMethod.Post))
{
    <div id="form" class=" container  row form">      
    <div class="col-md-2"></div>
    <div id="form2" class="col-md-8">

        <div id="text" class="row form-group">

            <p class="col-md-6" style="margin-top:6px; vertical-align:central; text-align:center"><strong>Kullanıcı Adı :</strong></p>
            @Html.TextBoxFor(x => x.UserName, null, new { @class = "col-md-6 form-control", @readonly = "readonly" })
        </div>
        <div id="text" class="row form-group">
            <p class="col-md-6" style="margin-top:6px; vertical-align:central; text-align:center"><strong>Email :</strong></p>
            @Html.TextBoxFor(x => x.Email, null, new { @class = "col-md-6 form-control" })
        </div>
        <div class="row form-group">
            <p class="col-md-6" style="margin-top:6px; vertical-align:central; text-align:center"><strong>Restoran Adı :</strong></p>
            @Html.TextBoxFor(x => x.RestaurantName, null, new { @class = "col-md-6 form-control" })
        </div>
        <div class="row form-group">
            <p class="col-md-6" style="margin-top:6px; vertical-align:central; text-align:center"><strong>Telefon No :</strong></p>
            @Html.TextBoxFor(x => x.PhoneNumber, null, new { @class = "col-md-6 form-control" })
        </div>
        <div class="row form-group">
            <p class="col-md-6" style="margin-top:6px; vertical-align:central; text-align:center"><strong>Çalışan Sayısı :</strong></p>
            @Html.TextBoxFor(x => x.AmountOfWorkers, null, new { @class = "col-md-6 form-control" })
        </div>
        <div class="row form-group">
            <p class="col-md-6" style="margin-top:6px; vertical-align:central; text-align:center"><strong>Şehir :</strong></p>
            @Html.TextBoxFor(x => x.RestaurantAddress.City, null, new { @class = "col-md-6 form-control" })
        </div>
        <div class="row form-group">
            <p class="col-md-6" style="margin-top:6px; vertical-align:central; text-align:center"><strong>İlçe :</strong></p>
            @Html.TextBoxFor(x => x.RestaurantAddress.District, null, new { @class = "col-md-6 form-control" })
        </div>
        <div class="row form-group">
            <p class="col-md-6" style="margin-top:6px; vertical-align:central; text-align:center"><strong>Mahalle :</strong></p>
            @Html.TextBoxFor(x => x.RestaurantAddress.Neighborhood, null, new { @class = "col-md-6 form-control" })
        </div>
        <div class="row form-group">
            <p class="col-md-6" style="margin-top:6px; vertical-align:central; text-align:center"><strong>Sokak :</strong></p>
            @Html.TextBoxFor(x => x.RestaurantAddress.StreetAndNu, null, new { @class = "col-md-6 form-control" })
        </div>
        <div style="text-align:center; margin-top:20px">
            <div style="margin-top:10px">@Html.HiddenFor(x => x.RestaurantAddress.AddressId)</div>
            <div style="margin-top:10px">@Html.ValidationMessageFor(x => x.UserName)</div>
            <div style="margin-top:10px">@Html.ValidationMessageFor(x => x.Email)</div>
            <div style="margin-top:10px">@Html.ValidationMessageFor(x => x.RestaurantName)</div>
            <div style="margin-top:10px">@Html.ValidationMessageFor(x => x.PhoneNumber)</div>
            <div style="margin-top:10px">@Html.ValidationMessageFor(x => x.AmountOfWorkers)</div>
            <div style="margin-top:10px">@Html.ValidationMessageFor(x => x.RestaurantAddress.City)</div>
            <div style="margin-top:10px">@Html.ValidationMessageFor(x => x.RestaurantAddress.District)</div>
            <div style="margin-top:10px">@Html.ValidationMessageFor(x => x.RestaurantAddress.Neighborhood)</div>
            <div style="margin-top:10px">@Html.ValidationMessageFor(x => x.RestaurantAddress.StreetAndNu)</div>
        </div>
        <div style="text-align:center;margin-top:10px">
            <input class="btn btn-success" id="btn" type="submit" value="Kaydet" />
        </div>
    </div>
        <div class="col-md-2"></div>
        
       
    </div>
    
    }
