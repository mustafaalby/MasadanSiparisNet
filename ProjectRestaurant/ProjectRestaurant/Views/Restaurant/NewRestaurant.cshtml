<style>
    body {
        background-image: url('/image/cafebackground.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }

    .field-validation-error {
        margin-bottom:5px;
        padding: 3px;
        background-color: #b90000;
        color:aliceblue;
        border-radius: 5px;
    }
    .form {
        background-color: rgba(0, 0, 0, 0.8);
        border-radius: 25px 25px 20px 25px;
        padding: 10px 10px 10px 0px;
    }

    .form p {
        color: rgb(255, 255, 255);
    }

    .form input {
        background-color: rgba(0, 0, 0, 0.50);
        border-color: rgb(255, 255, 255);
    }
    
    .form input[type=text] {
        background-color: rgba(0, 0, 0, 0.50);
        border-color: rgb(255, 255, 255);
        color: rgb(255, 255, 255);
    }
    .form input[type=text]:focus {
        background-color: rgba(0, 0, 0, 0.50);
        box-shadow: 3px 7px rgba(255, 255, 255, 0.2);
        transition: 0.3s;
        color: aliceblue;
    }
    .form input[type=email] {
        background-color: rgba(0, 0, 0, 0.50);
        border-color: rgb(255, 255, 255);
        color: rgb(255, 255, 255);
    }
        .form input[type=email]:focus {
            background-color: rgba(0, 0, 0, 0.50);
            box-shadow: 3px 7px rgba(255, 255, 255, 0.2);
            transition: 0.3s;
            color: aliceblue;
        }
    .form input[type=password] {
        background-color: rgba(0, 0, 0, 0.50);
        border-color: rgb(255, 255, 255);
        color: rgb(255, 255, 255);
    }
        .form input[type=password]:focus {
            background-color: rgba(0, 0, 0, 0.50);
            box-shadow: 3px 7px rgba(255, 255, 255, 0.2);
            transition: 0.3s;
            color: aliceblue;
        }
    .form input[type=submit]:hover {
        background-color: rgba(2, 147, 0, 0.85);
        border-color: rgb(255, 255, 255);
    }
</style>

@using (@Html.BeginForm(FormMethod.Post))
{

    <div  class="container row form">
        <div class="col-md-2"></div>

        <div class="col-md-8">
            <div id="text" class="row form-group">
                <p class="col-md-6" style="margin-top:6px; vertical-align:central; text-align:center"><strong>Email :</strong></p>
                @Html.TextBoxFor(x => x.Email, null, new { @class = "col-md-6 form-control  ", type = "email" })
            </div>
            <div id="text" class="row form-group">
                <p class="col-md-6" style="margin-top:6px; vertical-align:central; text-align:center"><strong>Kullanıcı Adı :</strong></p>
                @Html.TextBoxFor(x => x.UserName, null, new { @class = "col-md-6 form-control" })
            </div>
            <div id="text" class="row form-group">
                <p class="col-md-6" style="margin-top:6px; vertical-align:central; text-align:center"><strong>Şifre :</strong></p>
                @Html.TextBoxFor(x => x.Password, null, new { @class = "col-md-6 form-control", type = "password" })
            </div>
            <div id="text" class="row form-group">
                <p class="col-md-6" style="margin-top:6px; vertical-align:central; text-align:center"><strong>Şifre Tekrarı :</strong></p>
                @Html.TextBoxFor(x => x.PasswordConfirm, null, new { @class = "col-md-6 form-control ", type = "password" })
            </div>
            <div  id="text" style="text-align:center ;margin-top:20px;">
                <div style="margin-top:5px;">@Html.ValidationMessageFor(x => x.Email)</div>
                <div style="margin-top:5px;">@Html.ValidationMessageFor(x => x.UserName)</div>
                <div style="margin-top:5px;">@Html.ValidationMessageFor(x => x.Password)</div>
            </div>
            <div id="text" style="text-align:center; margin-top:20px;">
                <input class="btn btn-success" type="submit" value="Kayıt Ol" />
            </div>

        </div>
         <div class="col-md-2"></div>

    </div>
}

