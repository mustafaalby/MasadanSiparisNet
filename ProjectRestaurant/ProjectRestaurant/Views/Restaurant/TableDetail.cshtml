@model SessionViewModel
@{
    ViewData["Title"] = "MySession";
}
<style>
    body {
        background-image: url('/image/cafebackground.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
    .tableId {
        background-color: rgba(0, 0, 0, 0.8);
        border-radius: 25px 25px 20px 25px;
        padding: 10px 10px 10px 10px;
    }
    .tableId h2{
        color:white;
    }
    .card {
        background-color: rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(0, 0, 0, 0.8);
        transition: 0.3s;
        border-color: white;
        color: white;
        
    }
        .card:hover {
            box-shadow: 0 5px 10px 0 white;
        }
    .card a{
        color:white;
        border-color:white;
    }
    .card a:hover{
        border-color:white;
        background-color:rgba(255, 106, 0, 1.00);
        
    }
</style>
<div class="container tableId" id="TableDetail">
    <div><h2>@Model.TableName</h2></div>
    <div class="row">
        <div class="col-md-8">
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th>Ürün</th>
                        <th>Adet</th>
                        <th>Fiyat</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Order.Count; i++)
                    {
                        if (Model.Order[i].isDelivered)
                        {
                            <tr>
                                <td>@Model.Order[i].ProductName</td>
                                <td>@Model.Order[i].Quantity</td>
                                <td>@Model.Order[i].Price</td>

                            </tr>
                        }
                        else
                        { 
                            <tr class="table-secondary" style="color:#000000">
                                <td>@Model.Order[i].ProductName</td>
                                <td>@Model.Order[i].Quantity</td>
                                <td>@Model.Order[i].Price</td>
                            </tr>
                        }

                    }

                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <div style="text-align:center">Müşteri No: @Model.SessionId</div>
                </div>
                <div class="card-body">
                    <div>
                        <div><p style="text-align:center">Masa :@Model.TableName</p></div>
                        <div><p style="text-align:center">Başlangıç: @Model.StartDate</p></div>
                        <div><p style="text-align:center">Toplam Fiyat:@Model.TotalFee</p> </div>
                        <div style="text-align:center" >

                            <a  asp-action="DeliverOrder" asp-controller="Restaurant" asp-route-id="@Model.SessionId" class="btn btn-outline-dark float-left"    >Sipariş Hazır</a>
                            <div class="float-right" id="@Model.TableId"><a asp-action="CloseSession" asp-controller="Restaurant" asp-route-id="@Model.SessionId" id="closeSession" class="btn btn-outline-dark">Hesabı Kapat</a></div>
                        </div>
                        

                    </div>
                </div>
                <div>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/Istek.js"></script>