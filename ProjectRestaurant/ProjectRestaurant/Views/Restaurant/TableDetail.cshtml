@model SessionViewModel
@{
    ViewData["Title"] = "MySession";
}
<style>
    body {
        background-image: url('/image/cafebackground.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
    .tableId {
        background-color: rgba(0, 0, 0, 0.8);
        border-radius: 25px 25px 20px 25px;
        padding: 10px 10px 10px 10px;
    }
    .tableId h2{
        color:white;
    }
    .card {
        background-color: rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(0, 0, 0, 0.8);
        transition: 0.3s;
        border-color: white;
        color: white;
        
    }
        .card:hover {
            box-shadow: 0 5px 10px 0 white;
        }
    .card a{
        color:white;
        border-color:white;
    }
    .card a:hover{
        border-color:white;
        background-color:rgba(255, 106, 0, 1.00);
        
    }
    .restaurantMessage {
        width: 200px;
        word-wrap: break-word;
        margin-left: auto;
        margin-right: 5px;
        text-align: right;
        color: black;
        background-color: white;
        border-radius: 10px 10px 0px 10px;
        margin-top: 10px;
        padding: 0 5px 0 5px;
    }
    .customerMessage {
        width: 200px;
        word-wrap: break-word;
        text-align: left;
        margin-right: auto;
        margin-left: 5px;
        color: white;
        background-color: rgba(255, 106, 0, 1.00);
        border-radius: 10px 10px 10px 0px;
        margin-top: 10px ;
        padding:0 5px 0 5px;
    }
    #messageBox {
        height:300px;
        margin-top:10px; display:flex;
        flex-direction:column;
        overflow:auto;
    }
    .messageBoxContainer {
       background-color:rgba(0, 0, 0, 0.4);
       border-radius:10px 10px 10px 10px;
       border:1px solid white;
      
    }
    .messageTextBox {
        margin:5px 5px 15px 5px;
        height:30px;
        display:grid;
        grid-template-columns:80% 20%
    }
    #messageBut {
        font-size: 0.8rem;
    }
    #messageBut:hover{
        background-color:rgba(255, 106, 0, 1.00);
        color:white;
        
    }
    textarea {
        background-color: rgba(0, 0, 0, 0.2);
        color: white;
        border-radius:5px;
        border: 1px solid white;
        transition:0.3s;
    }
        textarea:focus {
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            border-radius: 5px;
            border-color: white;
            border :1px solid white ;
            outline:none;
            box-shadow:0 0 4px white;
            
        }
</style>
<div class="container tableId" id="TableDetail">
    <div><h2>@Model.TableName</h2></div>
    <div class="row">
        <div class="col-md-8">
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th>Ürün</th>
                        <th>Adet</th>
                        <th>Fiyat</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Order.Count; i++)
                    {
                        if (Model.Order[i].isDelivered)
                        {
                            <tr>
                                <td>@Model.Order[i].ProductName</td>
                                <td>@Model.Order[i].Quantity</td>
                                <td>@Model.Order[i].Price</td>

                            </tr>
                        }
                        else
                        { 
                            <tr class="table-secondary" style="color:#000000">
                                <td>@Model.Order[i].ProductName</td>
                                <td>@Model.Order[i].Quantity</td>
                                <td>@Model.Order[i].Price</td>
                            </tr>
                        }

                    }

                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <div id="sessionId" style="text-align:center">Müşteri No:@Model.SessionId</div>
                </div>
                <div class="card-body">
                    <div>
                        <div><p style="text-align:center">Masa :@Model.TableName</p></div>
                        <div><p style="text-align:center">Başlangıç: @Model.StartDate</p></div>
                        <div><p style="text-align:center">Toplam Fiyat:@Model.TotalFee</p> </div>
                        <div style="text-align:center; display:grid; grid-template-columns:33% 33% 33%" >

                            <a asp-action="DeliverOrder" asp-controller="Restaurant" asp-route-id="@Model.SessionId" class="btn btn-outline-dark float-left">Sipariş Hazır</a>
                            <div  id="@Model.TableId"><a asp-action="CloseSession" asp-controller="Restaurant" asp-route-id="@Model.SessionId" id="closeSession" class="btn btn-outline-dark">Hesabı Kapat</a></div>
                            <div id="@Model.TableId"><a target="_blank" asp-action="CancelOrders" asp-controller="Restaurant" asp-route-id="@Model.TableId"  class="btn btn-outline-dark">Sipariş İptalleri</a></div>
                        </div>
                        

                    </div>
                </div>
                <div>

                </div>
            </div>
            <div class="messageBoxContainer">
                <div id="messageBox">
                    
                </div>
                <div class="messageTextBox">
                    <textarea placeholder="Mesajınız..." id="messageText" style="height:auto; resize:none"></textarea>
                    <button id="messageBut"  class="btn btn-outline-light">Gönder</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/Istek.js"></script>
<script>
    $(document).ready(function () {
        getMessages();
    });
    $("#messageBut").click(function () {
        $.ajax({
            type: "post",
            url: "/MenuView/PostMessage",
            data: {
                SessionId: $("#sessionId").text().split(":")[1],
                From: "Restoran",
                To: $("#sessionId").text().split(":")[1],
                MessageText: $("#messageText").val()
            },
            success: function (result) {
                getMessages();
            }

        })
    })
    function getMessages() {
        $.ajax({
            type: "get",
            url: "/MenuView/GetMessages",
            dataType:"json",
            data: {
                sessionId: $("#sessionId").text().split(":")[1]
            },
            success: function (result) {
                $("#messageBox div").html('');
                $('#messageText').val("");
                
                for (var i = 0; i < result.length; i++) {
                    
                    if (result[i].from == "Restoran")
                    {
                        
                        var temp = "<div class=restaurantMessage > <p>" + result[i].messageText + "</p></div >";
                        
                    }
                    else {
                        var temp = "<div class=customerMessage > <p>" + result[i].messageText + "</p></div >"; 
                        
                    }
                    $("#messageBox").append(temp);
                    $('#messageBox').scrollTop($('#messageBox').prop('scrollHeight'));
                }
            },
            error: function (result) {
                console.log(result);
            
}
        })
    }
</script>
